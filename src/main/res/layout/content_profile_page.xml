<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abdulhamid.alcapp.ProfilePageActivity"
    tools:showIn="@layout/activity_profile_page">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_photo"
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_alignParentStart="true"
        android:cropToPadding="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_alignWithParentIfMissing="false"
        android:maxHeight="250dp"
        android:maxWidth="1000dp"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Abdulhamid Oyempemi"
        android:id="@+id/text_name"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/imageView_photo"
        android:textSize="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Track:   Android"
        android:id="@+id/text_track"
        android:layout_alignParentStart="false"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:layout_alignParentEnd="false"
        android:textStyle="bold"
        android:layout_below="@+id/text_name" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Country:  Nigeria"
        android:id="@+id/text_country"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/text_track" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email:   oyempemia@gmail.com"
        android:id="@+id/text_email"
        android:layout_below="@+id/text_country"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number:  2348135669272"
        android:id="@+id/text_phone"
        android:layout_below="@+id/text_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Slack Username:    @Poray"
        android:id="@+id/text_slack"
        android:layout_below="@+id/text_phone"
        android:layout_alignEnd="@+id/text_phone"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:textStyle="bold" />

</RelativeLayout>
